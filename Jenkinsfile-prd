pipeline {
    agent any

    stages {

        stage('Build and Deploy') {
            steps {
                sh 'sudo docker-compose -f docker-compose-prd.yml --env-file ./config/.env.prd up --build -d'
            }
        }

        stage('Remove unused images') {
            steps {
                sh 'sudo docker image prune -a -f'
            }
        }
    }
}